#:kivy 1.0
Root:

<Root@MDScreen>:
    MDToolbar:
        id:toolbar
        pos_hint: {"top": 1}
        size_hint: (1, .1)
        title:'Bourse Direct Actualit√©s'
        left_action_items: [["logo.png"]]
        right_action_items:[["refresh", lambda x: GridLayoutNews.refresh()]]
    MDBoxLayout:
        size_hint: (1, .896)
        Widget:
            size_hint:0.1,1
        ScrollView:
            MDGridLayoutNews:
                id:GridLayoutNews
                cols:1
                spacing:['30dp','30dp']
                size_hint:1,None
                height:self.minimum_height
        Widget:
            size_hint:0.1,1
